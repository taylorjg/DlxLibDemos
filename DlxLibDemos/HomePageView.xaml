<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DlxLibDemos.HomePageView"
             x:Name="page">

    <Grid Margin="20">
        <ScrollView x:Name="MyScrollView" Margin="0,0,0,50">
            <FlexLayout
                x:Name="MyFlexLayout"
                BindableLayout.ItemsSource="{Binding AvailableDemos}"
                Wrap="Wrap"
                JustifyContent="SpaceEvenly"
            >
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="White"
                                StrokeThickness="4"
                                WidthRequest="400"
                                MinimumHeightRequest="150"
                                MaximumHeightRequest="250"
                                Margin="5"
                                Padding="10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding BindingContext.NavigateToDemoCommand, Source={x:Reference page}}"
                                    CommandParameter="{Binding Route}" />
                            </Border.GestureRecognizers>
                            <Frame BackgroundColor="#212121" CornerRadius="0">
                                <Grid RowDefinitions="*" ColumnDefinitions="Auto,*" Margin="5" Padding="10">
                                    <GraphicsView
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Grid.Column="0"
                                        WidthRequest="100"
                                        HeightRequest="100"
                                        Margin="10"
                                        Background="Transparent"
                                        Drawable="{Binding ThumbnailDrawable}" />
                                    <Button
                                        Grid.Column="1"
                                        Margin="50,0,0,0"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Text="{Binding Name}"
                                        Command="{Binding BindingContext.NavigateToDemoCommand, Source={x:Reference page}}"
                                        CommandParameter="{Binding Route}" />
                                </Grid>
                            </Frame>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
        <Label
            Margin="0,0,5,5"
            VerticalOptions="End"
            HorizontalOptions="End"
            Text="{Binding Version, StringFormat='v{0}'}"
            FontSize="12" />
    </Grid>

</ContentPage>
