<?xml version="1.0" encoding="utf-8" ?>
<local:DemoPageBaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:local="clr-namespace:DlxLibDemos"
                        x:Class="DlxLibDemos.Demos.NQueens.NQueensDemoPageView"
                        Title="{x:Static local:DemoNames.NQueens}">

  <HorizontalStackLayout Spacing="10">
    <Label
      Text="Grid Size:"
      VerticalOptions="Center" />
    <Picker
      WidthRequest="50"
      Title="Select a grid size"
      ItemsSource="{Binding AvailableGridSizes}"
      SelectedItem="{Binding SelectedGridSize}" />
  </HorizontalStackLayout>

</local:DemoPageBaseView>
