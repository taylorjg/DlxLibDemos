<?xml version="1.0" encoding="utf-8" ?>
<local:DemoPageBaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:local="clr-namespace:DlxLibDemos"
                        x:Class="DlxLibDemos.Demos.SelfVisualisation.SelfVisualisationDemoPageView"
                        Title="{x:Static local:DemoNames.SelfVisualisation}">

  <HorizontalStackLayout Spacing="10">
    <Label
      Text="Sample Matrix:"
      VerticalOptions="Center" />
    <Picker
      WidthRequest="300"
      Title="Select a sample matrix"
      ItemsSource="{Binding SampleMatrices}"
      ItemDisplayBinding="{Binding Name}"
      SelectedItem="{Binding SelectedSampleMatrix}" />
  </HorizontalStackLayout>

</local:DemoPageBaseView>
