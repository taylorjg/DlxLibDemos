<?xml version="1.0" encoding="utf-8" ?>
<local:DemoPageBaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:local="clr-namespace:DlxLibDemos"
                        x:Class="DlxLibDemos.Demos.TetraSticks.TetraSticksDemoPageView"
                        Title="{x:Static local:DemoNames.TetraSticks}">

  <HorizontalStackLayout Spacing="10">
    <Label
      Text="Letter to omit:"
      VerticalOptions="Center" />
    <Picker
      WidthRequest="50"
      Title="Select a letter to omit"
      ItemsSource="{Binding MissingLetters}"
      SelectedItem="{Binding SelectedMissingLetter}" />
  </HorizontalStackLayout>

</local:DemoPageBaseView>
